{
  "name": "rodion-dev-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npm run type:check && npm run prettier:check && npm run lint:code && npm run lint:style",
    "type:check": "tsc --noEmit",
    "lint:style": "stylelint \"**/*.scss\"",
    "lint:code": "next lint",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,js,scss}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,tsx,js,scss}\"",
    "test": "npm run lint"
  },
  "dependencies": {
    "next": "13.4.19",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.48.0",
    "eslint-config-next": "^13.4.19",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "prettier": "^3.0.3",
    "sass": "^1.66.1",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "typescript": "^5.2.2"
  }
}
