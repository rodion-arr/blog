    "react": "18.2.0",
    "react-dom": "18.2.0",
    "throttle-debounce": "^5.0.0"
  },
  "devDependencies": {
    "@mdx-js/mdx": "^3.0.0",
    "@types/js-yaml": "^4.0.8",
    "@types/lunr": "^2.3.6",
    "@types/node": "^20.9.2",
    "@types/react": "^18.2.35",
    "@types/react-dom": "^18.2.14",
    "@types/throttle-debounce": "^5.0.1",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-mdx": "^2.2.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.0.3",
